generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model Author {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  affiliation String?
  books       Book[]

  @@map("author")
}

model Book {
  id          Int     @id @default(autoincrement())
  title       String
  isbn        String  @unique
  category    String
  authorId    Int
  author      Author  @relation(fields: [authorId], references: [id], onDelete: Cascade)
  borrowItems BorrowItem[]

  @@map("book")
}

model Member {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String
  borrows     Borrow[]

  @@map("member")
}

model Borrow {
  id          Int     @id @default(autoincrement())
  memberId    Int
  borrowDate  DateTime @default(now())
  member      Member  @relation(fields: [memberId], references: [id], onDelete: Cascade)
  borrowItems BorrowItem[]

  @@map("borrow")
}

model BorrowItem {
  id        Int       @id @default(autoincrement())
  bookId    Int
  borrowId  Int
  dueDate   DateTime
  returnedAt DateTime?
  book      Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  borrow    Borrow    @relation(fields: [borrowId], references: [id], onDelete: Cascade)

  @@map("borrow_item")
}